{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/github",
      "dest": "/api/auth/github.js"
    },
    {
      "src": "/api/auth/github-callback",
      "dest": "/api/auth/github-callback.js"
    },
    {
      "src": "/api/auth/status",
      "dest": "/server.js"
    },
    {
      "src": "/api/auth/logout",
      "dest": "/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Set-Cookie",
          "value": "Path=/; HttpOnly; SameSite=Lax"
        }
      ]
    }
  ]
}